    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "giancosta86/time-utils",
  "scripts": {
    "clean": "rimraf dist coverage giancosta86-*.tgz",
    "clean:all": "yarn clean && rimraf node_modules",
